
    <div class='top-bar'>

        <div class="top-bar-left">
            <%= link_to fa_icon('home'), '/' %>
            <%= link_to fa_icon('book'), '/index' %>
            <%= link_to fa_icon('chevron-left'), @service.student %>
            <%= link_to fa_icon('chevron-up'), service_path %>
        </div>

    </div>

    <h1 class="row align-center">Service</h1>

    <div class="row align-center small-3">

    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Student</th>
                <th colspan="2"></th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td><%= @service.title %>
                    <%= link_to fa_icon('pencil'), edit_service_path(@service) %>
                    <%= link_to fa_icon('trash'), @service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <td><%= @service.description %></td>
                <td><%= @service.student.name %></td>
            </tr>
        </tbody>
    </table>
  </div>

    <p id="notice"><%= notice %></p>
</div>
