<div class="container">

    <div class='nav'>

        <div class="links">
            <%= link_to fa_icon('chevron-left'), @service.student %>
            <%= link_to fa_icon('home'), '/' %>
            <%= link_to fa_icon('book'), '/index' %>
        </div>

    </div>

    <div class="school-contents">

        <h1>Service</h1>

        <span>
            <strong>Title:</strong>
            <%= @service.title %>
        </span>

        <span>
            <strong>Description:</strong>
            <%= @service.description %>
        </span>

        <span>
            <strong>Student:</strong>
            <%= link_to @service.student.name, @service.student %>
        </span>
        <span>
            <%= link_to fa_icon('pencil'), edit_service_path(@service) %>
            <%= link_to fa_icon('trash'), @service, method: :delete, data: { confirm: 'Are you sure?' } %>
        </span>
    </div>

    <p id="notice"><%= notice %></p>
</div>
