<h1>Service</h1>

<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @service.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @service.description %>
</p>

<p>
  <strong>Student:</strong>
  <%= link_to @service.student.name, @service.student %>
</p>

<%= link_to 'Edit', edit_service_path(@service) %> |

<% if @service.student.nil? %>
<%= link_to 'Back', services_path %>
<% else %>
<%= link_to 'Back', @service.student %>
<% end %> |
<%= link_to 'Home', '/' %>
