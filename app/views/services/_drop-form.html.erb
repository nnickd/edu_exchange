<%= form_for(service) do |f| %>
<button class="button" type="button" data-toggle="create-service">Offer a new service</button>
<div class="dropdown-pane" id="create-service" data-dropdown data-auto-focus="true">
    <% if service.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(service.errors.count, "error") %>
            prohibited this service from being saved:</h2>

        <ul>
            <% service.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>

    <div class="columns">
        <div class="align-center">
            <%= f.text_field :title, placeholder: :title %>
        </div>

        <div class="align-center">
            <%= f.text_area :description, placeholder: :description %>
        </div>

        <%= f.hidden_field :student_id, value: @student.id %>

        <div class="align-center">
            <%= submit_tag @tag, name: f, class: 'button' %>
        </div>
    </div>

    <% end %>

</div>
