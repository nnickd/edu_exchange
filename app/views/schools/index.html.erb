<div class="container">

    <div class="top-bar">
        <div class="links">
            <%= link_to fa_icon('home'), '/' %>
            <%= link_to fa_icon('book'), '/index' %>
            <%= link_to fa_icon('chevron-right'), students_path %>
        </div>


        <div class="top-bar-right">
            <ul class="menu">
                <%= render 'search' %>
            </ul>
        </div>
    </div>

    <h1 class="row align-center">Schools</h1>

    <div class="list row small-2">
        <%= render 'table' %>
    </div>

    <div id="new-school" class="row align-center">
        <%= render 'formbar', school: @school %>
    </div>

    <p id="notice"><%= notice %></p>
</div>
