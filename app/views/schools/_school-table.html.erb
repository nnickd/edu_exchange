<table>
  <caption>School</caption>

    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th colspan="2"></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><%= @school.name %><br>
                <%= link_to fa_icon('pencil'), edit_school_path(@school) %>
                <%= link_to fa_icon('trash'), @school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <td><%= @school.location %></td>
        </tr>
    </tbody>
</table>
