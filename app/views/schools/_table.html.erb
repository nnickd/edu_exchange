<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= link_to school.name, school %></td>
        <td><%= school.location %></td>
        <!-- <td><%= link_to fa_icon('eye'), school %></td> -->
        <td><%= link_to fa_icon('pencil'), edit_school_path(school) %></td>
        <td><%= link_to fa_icon('trash'), school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
