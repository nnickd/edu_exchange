<%= form_tag(students_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "student name" %>
    <%= submit_tag "Search", :name => nil %>
<% end %>

<% if @students.find_by(name: @search) %>
<% @students = @students.where(name: @search) %>
<% end %>
