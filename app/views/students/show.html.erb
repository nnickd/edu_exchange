<div class='top-bar'>

    <div class="top-bar-left">
        <%= link_to fa_icon('home'), '/'%>
        <%= link_to fa_icon('book'), '/index' %>
        <%= link_to fa_icon('chevron-left'), @student.school %>
        <%= link_to fa_icon('chevron-up'), students_path %>
    </div>

    <div class="row align-center">
      <%= render 'services/drop-form', service: @service %>
    </div>
</div>

<div class="columns align-center">
    <h1 class="row align-center">Student</h1>
    <div class="row align-center small-3">
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Bio</th>
                    <th>School</th>
                    <th colspan="3"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><%= @student.name %>
                        <%= link_to fa_icon('pencil'), edit_student_path(@student) %>
                        <%= link_to fa_icon('trash'), @student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    <td><%= @student.bio %></td>
                    <td><%= link_to @student.school.name, @student.school %></td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="row align-center small-3">
        <%= render 'services/table' %>
    </div>

    <div class="row align-center small-3">
        <%= render 'bids/table' %>
    </div>

    <p id="notice"><%= notice %></p>

</div>
